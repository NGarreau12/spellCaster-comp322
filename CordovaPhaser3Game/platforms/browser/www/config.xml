<?xml version='1.0' encoding='utf-8'?>
<widget id="spellCaster" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spell Caster</name>
    <description>
        A top-down RPG that is built off of a spell casting system.
    </description>
    <author email="nathangarreau.contact@gmail.com" href="https://github.com/NGarreau12">
        Garreau Games
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
